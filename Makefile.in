#	MMDF Root Makefile
#
#
MMDF_MAJOR_VERSION  = @MMDF_MAJOR_VERSION@
MMDF_MINOR_VERSION  = @MMDF_MINOR_VERSION@

SHELL           = /bin/sh

#BUILD_SUBDIRS	= @CONFIG_SUBDIRS@
SUBDIR		= @SUBDIRS@

install_prefix	=
prefix		= @prefix@
exec_prefix	= @exec_prefix@
libdir		= @libdir@
libexecdir	= @libexecdir@
bindir		= @bindir@
sbindir		= @sbindir@
rcvdir		= @rcvdir@
datadir		= @datadir@
sharedstatedir	= @sharedstatedir@
localstatedir	= @localstatedir@
mmdfprefix	= @mmdfprefix@
sysconfdir	= @sysconfdir@
srcdir          = @srcdir@
varprefix       = @varprefix@

mcmddir		= @mcmddir@
mchndir		= @mchndir@
mtbldir		= @mtbldir@
mlogdir		= @mlogdir@
mphsdir    	= @mphsdir@
mquedir    	= @mquedir@
d_calllog	= @d_calllog@

mmtailor	= @mmtailor@
tbldbm		= @tbldbm@
lckdfldir	= @lckdfldir@
authfile	= @authfile@
uucplock	= @uucplock@
resendprog	= @resendprog@
sendprog	= @sendprog@

PATHNAMES	= h/pathnames.h

HOST		= @host@
HOST_CPU	= @host_cpu@
HOST_VENDOR	= @host_vendor@
HOST_OS		= @host_os@
HOST_ALIAS	= @host_alias@
SYSTEM		= @SYSTEM@
SYSTEM		= @system@

## 
## various programs
##
CC              = @CC@
INSTALL         = ./install-sh -s -c
INSTALL_PROGRAM = ${INSTALL}
CHOWN		= @CHOWN@
MMDFLOGIN	= @MMDFLOGIN@
ROOTLOGIN	= @ROOTLOGIN@
PGMPROT		= @PGMPROT@
D_DIALPROG	= @D_DIALPROG@

##
## compiler and linker options
##
CFLAGS          = @CFLAGS@
CPPFLAGS        = -I${srcdir} @CPPFLAGS@ 
DEFS            = @DEFS@ -DNDEBUG
LDFLAGS         = @LDFLAGS@
STATIC_LDFLAGS  = @STATIC_LDFLAGS@
LIBS            = @LIBS@
MMDFLIBS	= @MMDFLIBS@

all: pathnames binary

binary: pathnames
	for dir in ${SUBDIR}; do \
		(cd $${dir}; make ${MFLAGS}); done

depend:
	for dir in ${SUBDIR}; do \
		(cd $${dir}; make ${MFLAGS} depend); done

lint:
	for dir in ${SUBDIR}; do \
		(cd $${dir}; make ${MFLAGS} lint); done

install: dirs
	for dir in ${SUBDIR}; do \
		(cd $${dir}; make ${MFLAGS} install); done

clean:
	rm -f make.out ${PATHNAMES}
	for dir in ${SUBDIR}; do \
		(cd $${dir}; make $@); done

distclean:
	rm -f make.out ${PATHNAMES}
	for dir in ${SUBDIR}; do \
		(cd $${dir}; make $@); done
	rm -f config.cache config.log config.status
	rm -f TAGS TAGS* *.gz *.tar h/config.h *~ #*#
	(cd conf; ./cleanup )
	rm -f Makefile.com conf/common/Makefile.com
	rm -f Makefile


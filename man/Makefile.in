sbindir		= @sbindir@
rcvdir		= @rcvdir@
datadir		= @datadir@
sharedstatedir	= @sharedstatedir@
localstatedir	= @localstatedir@
mmdfprefix	= @mmdfprefix@
sysconfdir	= @sysconfdir@
srcdir          = @srcdir@
varprefix       = @varprefix@

mcmddir         = @mcmddir@
mchndir         = @mchndir@
